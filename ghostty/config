# Ghostty Configuration

# Font Configuration
font-family = FiraCode Nerd Font
font-size = 12
font-style = Medium 
adjust-cell-width = "-10%"

# Window Configuration
window-padding-x = 8
window-padding-y = 8
window-decoration = none 
background-opacity = 0.8
background-blur-radius = 30
macos-option-as-alt = true
macos-titlebar-style = hidden


# Terminal
term = xterm-256color

# Window appearance
window-theme = dark
window-colorspace = display-p3

palette = 0=#1b1d2b
palette = 1=#ff757f
palette = 2=#c3e88d
palette = 3=#ffc777
palette = 4=#82aaff
palette = 5=#c099ff
palette = 6=#86e1fc
palette = 7=#828bb8
palette = 8=#444a73
palette = 9=#ff8d94
palette = 10=#c7fb6d
palette = 11=#ffd8ab
palette = 12=#9ab8ff
palette = 13=#caabff
palette = 14=#b2ebff
palette = 15=#c8d3f5

background = #0a0a0a
foreground = #c0caf5
cursor-color = #c0caf5
selection-background = #283457
selection-foreground = #c0caf5

# Shell integration
shell-integration = fish
shell-integration-features = cursor,sudo,title

# Performance
unfocused-split-opacity = 0.8

# Mouse
mouse-hide-while-typing = true

# Scrollback
scrollback-limit = 50000

# Bold text
bold-is-bright = false

# Window behavior
confirm-close-surface = false
quit-after-last-window-closed = true

# Copy on select
copy-on-select = true
clipboard-paste-protection = false

# Tmux window switching with Cmd+number (sends Alt+number for tmux M-1 through M-9 bindings)
# First unbind Ghostty's default tab switching
keybind = super+digit_1=unbind
keybind = super+digit_2=unbind
keybind = super+digit_3=unbind
keybind = super+digit_4=unbind
keybind = super+digit_5=unbind
keybind = super+digit_6=unbind
keybind = super+digit_7=unbind
keybind = super+digit_8=unbind
keybind = super+digit_9=unbind

# Now bind to tmux window switching
keybind = super+1=text:\x1b1
keybind = super+2=text:\x1b2
keybind = super+3=text:\x1b3
keybind = super+4=text:\x1b4
keybind = super+5=text:\x1b5
keybind = super+6=text:\x1b6
keybind = super+7=text:\x1b7
keybind = super+8=text:\x1b8
keybind = super+9=text:\x1b9

